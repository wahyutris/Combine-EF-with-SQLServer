<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bus Ticket Booking System</title>
    <link href="~/Content/AdvancePasswordValidation.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar-wrapper">
        @Html.Partial("_NavigationBar")
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    <div class="container">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Bus Ticket Booking System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/vendor")
    <script src="~/Scripts/AdvancePasswordValidation.js"></script>
    
    @RenderSection("scripts", required: false)
</body>
</html>
